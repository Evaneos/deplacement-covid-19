{
    "name": "voucher-generator",
    "version": "0.0.1",
    "description": "Agency form to generate voucher for deferred travels",
    "main": "certificate.js",
    "scripts": {
        "start": "VERSION=${VERSION:-localversion} parcel --public-url ${PUBLIC_URL:-/voucher-generator} ./src/index.html",
        "build": "parcel build --public-url ${PUBLIC_URL:-/voucher-generator} ./src/index.html ./src/robots.txt",
        "postbuild": "PUBLIC_URL=${PUBLIC_URL:-/voucher-generator} react-snap",
        "preserve": "npm run build",
        "serve": "serve dist",
        "serve:dist": "serve dist"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/evaneos/voucher-generator"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/evaneos/voucher-generator/issues"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-sw-cache": "^0.3.1",
        "postcss-current-selector": "0.0.3",
        "postcss-nested": "^4.2.1",
        "postcss-nested-ancestors": "^2.0.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.0.4",
        "react-snap": "^1.23.0",
        "rimraf": "^3.0.2",
        "serve": "^11.3.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.28",
        "@fortawesome/free-solid-svg-icons": "^5.13.0",
        "bootstrap": "^4.4.1",
        "pdf-lib": "^1.4.1",
        "sprintf-js": "^1.1.2"
    },
    "browserslist": [
        "last 5 versions"
    ],
    "reactSnap": {
        "source": "dist",
        "minifyHtml": {
            "collapseWhitespace": false,
            "removeComments": false
        },
        "puppeteerArgs": [
            "--no-sandbox",
            "--disable-setuid-sandbox"
        ]
    },
    "cache": {
        "globPatterns": [
            "**/*.{html,js,css,jpg,png,pdf,svg,eot,ttf,woff,woff2}"
        ],
        "disablePlugin": false,
        "inDev": true,
        "strategy": "default",
        "clearDist": false,
        "templatedURLs": {
            "./": [
                "index.html"
            ]
        }
    }
}
